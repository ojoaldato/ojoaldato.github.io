---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={cn(
    "inline-block transition-colors duration-300 ease-in-out",
    "hover:text-black dark:hover:text-white",
    underline &&
      "underline underline-offset-[3px] decoration-black/15 dark:decoration-white/30 hover:decoration-black/25 hover:dark:decoration-white/50"
  )}
  {...rest}
>
  <slot />
</a>
