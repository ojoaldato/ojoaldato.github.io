---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a id="back-to-prev" href={href} class="group flex w-fit p-1.5 gap-1.5 text-sm font-semibold rounded-lg border border-black/15 dark:border-white/20 hover:bg-black/5 hover:dark:bg-white/10 blend transition-colors duration-300 ease-in-out">
  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="stroke-current group-hover:stroke-black group-hover:dark:stroke-white">
    <polyline points="15 18 9 12 15 6" />
  </svg>
  <span class="group-hover:text-black dark:group-hover:text-white transition-colors duration-300 ease-in-out">
    <slot />
  </span>
</a>
