---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const yearsSince2013 = new Date().getFullYear() - 2013;

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort(
    (a, b) =>
      new Date(b.data.dateStart).valueOf() -
      new Date(a.data.dateStart).valueOf()
  )
  .slice(0, SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <section class="animate">
        <h4 class="font-semibold text-black dark:text-white">
          Hi, I'm Manu
        </h4>
        <article>
          <p>
            {yearsSince2013}+ years shaping data-driven products and leading
            high-impact engineering teams at Aircall, Klaviyo, Shopify,
            and BBVA.
          </p>
          <p>
            Born in Marbella. Raised in Madrid. Rewired in the US.
          </p>
          <p>
            Focused on AI and real-time systems, especially voice and
            on-device intelligence.
          </p>
        </article>
        <div class="flex flex-wrap gap-2 mt-4">
          {[
            "Machine Learning",
            "Generative AI",
            "NLP",
            "Voice AI",
            "Real-time Systems",
            "On-device AI",
            "Product Engineering",
            "UX",
            "Distributed Systems",
            "iOS",
            "Finance",
          ].map((tag) => (
            <span class="px-3 py-1 text-sm rounded-full bg-black/5 dark:bg-white/10 text-black/70 dark:text-white/70">
              {tag}
            </span>
          ))}
        </div>
        <p class="mt-4 text-xs opacity-50">
          ðŸ¥¦ means "stay green and eat your veggies" â€” take care of your body and your codebase, do the unsexy refactor, tell the hard truth, and keep both yourself and the team actually healthy, not just hyped.
        </p>
      </section>

      <section class="animate">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/blog">See all posts</Link>
        </div>
        <div class="flex flex-col gap-4 mt-4">
          {blog.map((post) => (
            <ArrowCard entry={post} />
          ))}
        </div>
      </section>

      <section class="animate">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Work Experience</h5>
          <Link href="/work">See all work</Link>
        </div>
        <div class="flex flex-col gap-4 mt-4">
          {work.map((entry) => (
            <div>
              <div class="text-sm opacity-75">
                {dateRange(entry.data.dateStart, entry.data.dateEnd)}
              </div>
              <div class="font-semibold text-black dark:text-white">
                {entry.data.company}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.role}
              </div>
              <article>
                <entry.Content />
              </article>
            </div>
          ))}
        </div>
      </section>

      <section class="animate">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Recent projects</h5>
          <Link href="/projects">See all projects</Link>
        </div>
        <div class="flex flex-col gap-4 mt-4">
          {projects.map((project) => (
            <ArrowCard entry={project} />
          ))}
        </div>
      </section>

      <section class="animate">
        <h5 class="font-semibold text-black dark:text-white">Let's Connect</h5>
        <article>
          <p>
            If you want to get in touch about something or just say hi,
            reach out on social media or send me an email.
          </p>
        </article>
        <div class="flex flex-wrap gap-1 mt-2">
          {SOCIALS.map((SOCIAL) => (
            <Link href={SOCIAL.HREF} external>
              {SOCIAL.NAME}
            </Link>
            <span>{" / "}</span>
          ))}
          <Link href={`mailto:${SITE.EMAIL}`}>
            {SITE.EMAIL}
          </Link>
        </div>
      </section>
    </div>
  </Container>
</PageLayout>
